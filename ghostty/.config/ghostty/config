keybind = clear
font-size = 14

mouse-hide-while-typing = true

keybind = ctrl+i=text:\t

window-padding-x = 8
window-padding-y = 4, 6

theme = "tokyonight_moon"

confirm-close-surface = false

# tabs
keybind = ctrl+s>c=new_tab
keybind = ctrl+s>n=next_tab
keybind = ctrl+s>p=previous_tab
keybind = ctrl+s>d=close_tab

# splits
keybind = ctrl+s>v=new_split:right
keybind = ctrl+s>/=new_split:right
keybind = ctrl+s>s=new_split:down
keybind = performable:ctrl+s>k=goto_split:top
keybind = performable:ctrl+s>j=goto_split:bottom
keybind = performable:ctrl+s>h=goto_split:left
keybind = performable:ctrl+s>l=goto_split:right

keybind = ctrl+s>r=reload_config
keybind = ctrl+s>q=close_surface
keybind = ctrl+s>.=increase_font_size:1
keybind = ctrl+s>,=decrease_font_size:1
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+s>f=toggle_fullscreen

