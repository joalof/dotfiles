[
  {
    "key": "ctrl+h",
    "command": "-editor.action.replace",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "-editor.action.selectLine",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+n",
    "command": "list.focusDown",
    "when": "explorerViewletVisible && explorerViewletFocus"
  },
  {
    "key": "ctrl+p",
    "command": "list.focusUp",
    "when": "explorerViewletVisible && explorerViewletFocus"
  },
  {
    "key": "escape",
    "command": "workbench.action.toggleSidebarVisibility",
    "when": "explorerViewletVisible && explorerViewletFocus"
  },
  // finding stuff
  {
    "key": ", f n",
    "command": "workbench.action.openSettingsJson",
    "when": "!editorTextFocus"
  },
  {
    "key": ", f k",
    "command": "workbench.action.openGlobalKeybindingsFile",
    "when": "!editorTextFocus"
  },
  {
    "key": ", f f",
    "command": "workbench.action.quickOpen",
    "when": "!editorTextFocus"
  },
  // Accept selected suggestion from IntelliSense
  {
    "key": "ctrl+i",
    "command": "acceptSelectedSuggestion",
    "when": "suggestWidgetVisible && textInputFocus"
  },
  // Insert newline in editor
  {
    "key": "ctrl+j",
    "command": "type",
    "args": {
      "text": "\n"
    },
    "when": "editorTextFocus && !suggestWidgetVisible && !findWidgetVisible"
  },
  // Confirm/accept in dropdown lists (command palette, quick open, etc.)
  {
    "key": "ctrl+j",
    "command": "list.select",
    "when": "listFocus && !inputFocus"
  },
  // Confirm in input boxes (search, rename, settings input, etc.)
  {
    "key": "ctrl+j",
    "command": "acceptSelectedSuggestion",
    "when": "inputFocus && suggestWidgetVisible"
  },
  {
    "key": "ctrl+j",
    "command": "acceptRenameInput",
    "when": "editorFocus && renameInputVisible"
  },
  // Confirm in debug console input
  {
    "key": "ctrl+j",
    "command": "workbench.action.acceptSelectedQuickOpenItem",
    "when": "inQuickOpen"
  },
  // terminal stuff
  {
    "key": "ctrl+k",
    "command": "workbench.action.terminal.clear",
    "when": "terminalFocus"
  },
  {
    "key": "ctrl+b",
    "command": "-workbench.action.toggleSidebarVisibility",
  },
  {
    "key": "ctrl+p",
    "command": "-workbench.action.quickOpen",
  },
  {
    "key": "ctrl+n",
    "command": "-editor.action.insertLineAfter",
  },
  {
    "key": "ctrl+a",
    "command": "-editor.action.selectAll",
  },
  {
    "key": "ctrl+f",
    "command": "-workbench.action.terminal.focusFind",
  },
  {
    "key": "ctrl+e",
    "command": "-workbench.action.quickOpen",
  },
  {
    "key": "ctrl+j",
    "command": "workbench.action.terminal.sendSequence",
    "args": { "text": "\u000D" },
    "when": "terminalFocus"
  }
]